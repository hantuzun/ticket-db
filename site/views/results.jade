doctype
html
    title #{title}

    header
        link(rel='stylesheet' href='//cdn.datatables.net/1.10.3/css/jquery.dataTables.css')

        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        script(src='//cdn.datatables.net/1.10.3/js/jquery.dataTables.js')
        script.
            $(document).ready(function(){    //purchase
                $('.purchaseButton').click(function(){
                    var eid = $(this).closest('tr').find('td:first').text();

                    //IF NOT LOGGED IN, RETURN!!!!!
                    $form = $("<form action='/purchaseForm' method='POST'></form>");
                    $form.append('<input type="hidden" name="event_id" value=' + eid + '/>');
                    $form.submit();
                });
            });


    body
        h2 Search results
        
        - if (res.length > 0)
            - if (isEvents == true)
                table.obj(id="table_id")
                    thead
                        tr
                            for key in Object.keys(res[0])
                                th #{key}
                            th= ""
                    tbody
                        for item in res
                            tr
                                for value in item
                                    td= value
                                td
                                    button#btnPurchase(type='button', class="purchaseButton")  Purchase
            - else
                table.obj(id="table_id") 
                    thead
                        tr
                            for key in Object.keys(res[0])
                                th #{key}
                    tbody
                        for item in res
                            tr
                                for value in item
                                    td= value
                                    
            script
                $('#table_id').DataTable(); 
        - else 
            p No results found