doctype
html
    title #{title}

    header
        link(rel='stylesheet' href='//cdn.datatables.net/1.10.3/css/jquery.dataTables.css')

        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        script(src='//cdn.datatables.net/1.10.3/js/jquery.dataTables.js')
        script.
            function purchase(id) {
                //IF NOT LOGGED IN, RETURN!!!!!
                $form = $("<form action='/purchaseForm' method='POST'></form>");
                $form.append('<input type="hidden" name="event_id" value=' + id + '/>');
                $form.submit();
            } 
        
    body   
        h2 Search results
        - if (res.length > 0)
            table.obj(id="table_id")
                thead
                    tr
                        for key in Object.keys(res[0])
                            th #{key}
                        th= ""
                tbody
                    for item in res
                        tr
                            for value in item
                                td= value
                            td
                                // should be "purchase(item.event_id)" instead of "2"
                                button#btnPurchase(type='button', onClick='purchase(2)') Purchase
            script
                $('#table_id').DataTable(); 
        - else 
            p No results found
